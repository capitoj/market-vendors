<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_min">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor Registration"
        android:textSize="16dp"
        android:paddingTop="@dimen/activity_max"
        android:paddingBottom="@dimen/activity_max"
        android:id="@+id/labelRegHeading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/labelRegHeading"
        android:paddingTop="@dimen/activity_max"
        android:paddingBottom="@dimen/activity_max"
        android:id="@+id/labelRegLocation"
        android:text="Market Location"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textSize="18dp"
        android:paddingTop="@dimen/activity_max"
        android:paddingBottom="@dimen/activity_max"
        android:id="@+id/radioRegLocation"
        android:layout_below="@+id/labelRegLocation">

    </RadioGroup>

</RelativeLayout>

