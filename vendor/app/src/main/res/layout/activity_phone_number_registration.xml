<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_min">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor Registration"
        android:textSize="16dp"
        android:paddingTop="@dimen/activity_max"
        android:paddingBottom="@dimen/activity_max"
        android:id="@+id/labelRegHeading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/labelRegHeading"
        android:paddingTop="@dimen/activity_max"
        android:paddingBottom="@dimen/activity_max"
        android:id="@+id/labelRegPhoneNumber"
        android:text="Phone Number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:paddingTop="@dimen/activity_max"
        android:paddingBottom="@dimen/activity_max"
        android:id="@+id/txtRegPhoneNumber"
        android:numeric="integer"
        android:layout_below="@+id/labelRegPhoneNumber"/>

</RelativeLayout>

