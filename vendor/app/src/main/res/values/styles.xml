<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/vendor.Widget.ActionBar</item>
    </style>

    <style name="vendor.Widget.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#005580</item>
        <item name="android:titleTextStyle">@style/vendor.Widget.ActionBar.Title</item>
        <item name="android:actionDropDownStyle">@style/vendor.Widget.DropDownItem.Spinner</item>
    </style>

    <style name="vendor.Widget.ActionBar.Title" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="vendor.Widget.DropDownItem.Spinner" parent="android:style/Widget.Holo.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/vendor.TextAppearance.Widget.DropDownItem</item>
    </style>

    <style name="vendor.TextAppearance.Widget.DropDownItem" parent="android:style/TextAppearance.Holo.Widget.DropDownItem">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
